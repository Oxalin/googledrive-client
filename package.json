{
  "name": "@buttercup/googledrive-client",
  "version": "2.0.0",
  "description": "Basic client for Google Drive",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "format": "prettier --write '{source,test}/**/*.{js,ts}'",
    "prepublishOnly": "npm run build",
    "test": "npm run test:unit && npm run test:format",
    "test:format": "prettier --check '{source,test}/**/*.{js,ts}'",
    "test:unit": "npm run build && c8 --src ./dist --check-coverage --lines 70 --functions 80 --branches 92 --statements 70 mocha 'test/unit/**/*.spec.js'"
  },
  "files": [
    "dist/**/*"
  ],
  "lint-staged": {
    "{source,test}/**/*.{js,ts}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup/googledrive-client.git"
  },
  "keywords": [
    "google",
    "drive",
    "client",
    "request"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buttercup/googledrive-client/issues"
  },
  "homepage": "https://github.com/buttercup/googledrive-client#readme",
  "dependencies": {
    "base64-js": "^1.5.1",
    "cross-fetch": "^3.1.5",
    "hot-patcher": "^2.0.0",
    "layerr": "^1.0.0",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "c8": "^7.12.0",
    "chai": "^4.3.4",
    "fetch-headers": "^3.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^13.1.0",
    "mocha": "^9.1.3",
    "prettier": "^2.8.3",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "typescript": "^4.9.4"
  }
}
